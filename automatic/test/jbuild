(jbuild_version 1)

(rule(

     (targets (montest.exe))
     (deps (${ROOT}/automatic/dll/direct.so
            ${ROOT}/automatic/libstubed/myclib.h
            test.c))
     (action
      (progn
       (copy ${ROOT}/automatic/libstubed/myclib.h myclib.h)
       (copy ${ROOT}/automatic/dll/direct.so direct.so)
       (run ${CC} -o ${@} -Wl,-rpath,. direct.so test.c)
     ))
))

(alias(
      (name runautomatictest)
      (deps (montest.exe))
      (action (run ${<}))
))
